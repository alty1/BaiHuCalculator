          android:id="@+id/jieguo"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:layout_below="@id/huxi"
          android:layout_marginTop="20dp"
          android:layout_toRightOf="@id/jieguo"
