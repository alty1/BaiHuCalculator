            android:layout_height="wrap_content"
            android:text="玩家"
            android:layout_below="@id/ddd"
            android:layout_marginTop="20dp"
            android:id="@+id/wj"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="甲"
            android:layout_below="@id/ddd"
